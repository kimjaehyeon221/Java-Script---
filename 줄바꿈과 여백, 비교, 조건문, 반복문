//연산자
//나머지 연산자는 다른 언어의 맥락과 같기에 특이점들에 대해서 기술한다. 
// === 비교 연산자 == c언어와 파이썬과 다른 비교 연산자.
alert(1 =='1')
alert(1 === 1)
alert(null == undefined)  //null은 값이 없지만 프로그래머가 의도적으로 값을 부여한것 따라서 
alert(null === undefined)//undefined랑은 정확하게 따지면 다름 
alert(true == 1);               //true --> 동등 연산자는 1을 True로 간주함
alert(true === 1);              //false
alert(true == '1');             //true
alert(true === '1');            //false -> boolean
alert(0 === -0);                //true
alert(NaN === NaN);             //false -> 특수한 데이터 형, 숫자가 아니라는 뜻이다. 
//'!=='는 '!='와 '=='의 관계와 같다. 정확하게 같지 않다는 의미다. 예제는 생략한다.

//조건문 문법 --> boolean이 들어간다. 
if (false){
    alert(1);
} else if (false){
  alert(3);
} else if (true) {
  alert(2);
} else {
  alert(4);
}

//로그인 
