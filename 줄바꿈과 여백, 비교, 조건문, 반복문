		 		alert('인증 했습니다') 
		 } else {
		 	alert('인증에 실패 했습니다')
		 }
	</script>
</body>
</html>

//boolean의 대체재
if(0){
    alert(1)
}
if(1){
    alert(2) 
    
//반복문 -> loop 와 iterate 반복문은 컴퓨터를 강력하게 한다. 
//while , for
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title></title>
</head>
<body>
<script type="text/javascript">
	var i = 0;
	/*whlie(i < 10){
		document.wirte("Coding everybody"+i+ "<br/>");
		i ++;
	}*/
  for (var i = 0; i < 10; i++){
		document.wirte("Coding everybody"+(i*2)+ "<br/>");
	}
  //i++, ++i 먼저 실앻되고 더하는 건 전자 더하고 실행되는 건 후자. iterate -> i는 관용적인 변수의 의미
</script>
</body>
</html>

//반복문의 제어 
for (var i = 0; i < 10; i++){
    if(i==5){
      break;
    }
		document.wirte("Coding everybody"+(i*2)+ "<br/>");
}
for (var i = 0; i < 10; i++){
    if(i==5){
      continue;
    }
		document.wirte("Coding everybody"+(i*2)+ "<br/>");
}
//반복문의 중첩
for (var i = 0; i < 10; i++){
    for (var ㅓ = 0; ㅓ < 10; ㅓ++){
		document.wirte(String(i) + String(j) + "<br/>");
	}
} // 배열에서 반복문의 진가가 드러난다.
  
    
